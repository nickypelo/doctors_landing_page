---
import InfiniteCarousel from "./infinite_carousel.astro";
---

<header class="bg-primary text-sm font-semibold relative md:static px-2">
    <section class="border-b border-secondary pt-2 text-secondary">
        <div class="max-w-primary mx-auto mb-2 font-medium hidden md:block">
            <div class="flex justify-between">
                <p>Subscribe to our newsletter and receive a 10% discount on your first service.</p>
                <ul class="flex gap-4">
                    <li>Policy Privacy</li>
                    <li>About Us</li>
                    <li>FAQ's</li>
                </ul>
            </div>
        </div>

        <!-- navigation bar -->
        <div class="flex justify-between max-w-primary mx-auto w-full items-center mb-2">
            <div class="font-black text-xl md:text-2xl w-20">Clinics-hospitals</div>
            <nav class="w-3/6 hidden md:block">
                <ul class="flex pl-8 gap-8">
                    <li>All Products</li>
                    <li>Pages</li>
                    <li>Blog</li>
                    <li>All Collections</li>
                </ul>
            </nav>
