export interface Doctor {
  names: string;
  details: string;
}


const doctors: Doctor[] = [
    {
        names: "Dr. Palesa Hlahatsi",
        details: "Steadfast dedication in assisting all patients regardless of race, class and gender.",
    },
    {
        names: "Dr. Reneiloe Crocodile",
        details: "Steadfast dedication in assisting all patients regardless of race, class and gender.",
    },
    {
        names: "Dr. Lerato Tsikanyana",
        details: "Steadfast dedication in assisting all patients regardless of race, class and gender.",
    },
    {
        names: "Dr. Uviwe Waka",
        details: "Steadfast dedication in assisting all patients regardless of race, class and gender.",
    }
    
